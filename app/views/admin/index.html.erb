<div class="container py-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title mb-4">ðŸ“Š AI Report Generator</h2>
          <p class="text-muted">
            Use our AI-powered report generator to create custom reports based on your questions.
          </p>

          <%= form_with url: reports_path, method: :post, local: true, data: { turbo: false } do |form| %>
            <div class="mb-3">
              <%= form.label :query, "Your question", class: "form-label" %>
              <%= form.text_area :query, rows: 3, class: "form-control", placeholder: "e.g. Show total orders by country for users over 30" %>
            </div>

            <%= form.submit "Generate Report", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
